{
  "domain": "validator",
  "simulation": {
    "max_ticks": 1000000
  },
  "protocol": {
    "reward_per_block": 100.0,
    "min_stake_required": 1000.0,
    "slashing_probability": 0.0001,
    "slashing_fraction": 0.01
  },
  "validators": {
    "count": 100,
    "initial_stake": 1200.0
  },
  "metrics": {
    "enabled": true,
    "collectors": ["global"]
  },
  "listeners": {
    "survival": {
      "enabled": true,
      "liveness_threshold": 2,
      "safety_threshold": 2
    },
    "distribution": {
      "enabled": true,
      "sampling_strategy": {
        "type": "every_n_blocks",
        "interval": 100000
      }
    }
  }
}
